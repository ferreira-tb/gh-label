{
  "name": "gh-label",
  "version": "0.1.0",
  "description": "Simple GUI for editing GitHub labels ",
  "type": "module",
  "packageManager": "pnpm@8.14.1",
  "private": true,
  "lint-staged": {
    "*.{?(c|m)@(j|t)s,css,vue,md,json,yaml}": "prettier --write"
  },
  "scripts": {
    "build": "cargo tauri build",
    "bump": "miho bump --no-ask --add .",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "dev": "cargo tauri dev",
    "format": "prettier . --write && cargo fmt --manifest-path=src-tauri/Cargo.toml",
    "format-check": "prettier . --check",
    "lint": "eslint . --config eslint.config.js --cache",
    "prepare": "husky install",
    "vite:dev": "vite",
    "vite:build": "vite build"
  },
  "dependencies": {
    "@tauri-apps/api": "^1.5.3",
    "@tb-dev/utils": "^1.1.3"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.1",
    "@sveltejs/kit": "^2.3.2",
    "@sveltejs/vite-plugin-svelte": "^3.0.1",
    "@tb-dev/eslint-config": "^1.5.14",
    "@tb-dev/utility-types": "^1.0.9",
    "@types/node": "^20.11.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.33",
    "prettier": "^3.2.0",
    "prettier-plugin-css-order": "^2.0.1",
    "prettier-plugin-svelte": "^3.1.2",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "svelte": "^4.2.8",
    "svelte-check": "^3.6.3",
    "tailwindcss": "^3.4.1",
    "taze": "^0.13.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.11"
  }
}
